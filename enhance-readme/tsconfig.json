{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "src/**/*.ts",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}